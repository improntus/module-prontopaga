<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <title>Success Page</title>
    </head>
    <body>
        <referenceBlock name="page.main.title">
            <block class="Magento\Checkout\Block\Onepage\Success" name="checkout.success.print.button" template="Magento_Checkout::button.phtml"/>
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">Thank you for your purchase!</argument>
            </action>
        </referenceBlock>

        <referenceContainer name="content">
            <block ifconfig="payment/prontopaga/success_page" name="checkout.success" template="Improntus_ProntoPaga::onepage/success.phtml" cacheable="false">
                <container name="order.success.additional.info" label="Order Success Additional Info"/>
                <arguments>
                    <argument name="view_model" xsi:type="object">Improntus\ProntoPaga\ViewModel\Onepage\Success</argument>
                </arguments>
            </block>
            <block class="Magento\Checkout\Block\Registration" ifconfig="payment/prontopaga/success_page" name="checkout.registration" template="Magento_Checkout::registration.phtml" cacheable="false"/>
        </referenceContainer>
    </body>
</page>
